<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Admin Notes Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/notesInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:boxStrokeColor="@color/primary_color"
        app:hintTextColor="@color/primary_color"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/notesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Admin notes (optional)"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Action Buttons -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select action to take:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/primary_text"
        android:layout_marginBottom="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/warningButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Warning"
        android:backgroundTint="@color/warning"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginBottom="8dp"
        app:icon="@drawable/ic_warning"
        app:iconTint="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/suspensionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Suspend Account"
        android:backgroundTint="@color/offer_rejected"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginBottom="8dp"
        app:icon="@drawable/ic_lock"
        app:iconTint="@android:color/white" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/deletionButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete Content"
        android:backgroundTint="@color/error_color"
        android:textColor="@android:color/white"
        style="@style/Widget.MaterialComponents.Button"
        app:icon="@drawable/ic_error"
        app:iconTint="@android:color/white" />

</LinearLayout>
